@model Team_Selector.Models.Data

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <script src="~/Scripts/jquery-1.7.1.min.js"></script>
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div class="topMenu"><div class="largeTopButton hover" id="ADDBtn"> + </div> <div class="smallTopButton hover" id="HELPBtn">Help</div> <div class="smallTopButton hover" id="SIGNOUTBtn"> Sign Out </div> </div>

        <div class="employeeMenu hover">
            <h1>Employees</h1>
            <table style="width: 100%;" cellspacing="0" cellpadding="0">
                @if (Model.Employees != null) { 
                    foreach (var item in Model.Employees) {
                    <tr>
                        @if (item.Available)
                        {
                            <td><div class="employeeListItemAvailable"><br />@Html.DisplayFor(modelItem => item.Name)&nbsp;&nbsp;<br />@item.Role.Title&nbsp;&nbsp;</div></td>
                        }
                    </tr>
                    }
                }
            </table>
            <table style="width: 100%;" cellspacing="0" cellpadding="0">
                @if (Model.Employees != null) { 
                    foreach (var item in Model.Employees) {
                    <tr>
                        @if (!item.Available)
                        {
                            <td><div class="employeeListItemUnavailable"><br />@Html.DisplayFor(modelItem => item.Name)&nbsp;&nbsp;<br /></div></td>
                        }
                    </tr>
                    }
                }
            </table>
        </div>
        <div class="menu">
            <div class="jobMenu hover">
                <h1>Jobs</h1>
                <table style="width: 100%;" cellspacing="0" cellpadding="0">
                    @if (Model.Jobs != null)
                    {
                        foreach (var item in Model.Jobs)
                        {
                        <tr>
                            <td><div class="jobListItem"><br />@Html.DisplayFor(modelItem => item.Title)&nbsp;&nbsp;</div></td>
                        </tr>
                        }
                    }
                </table>
            </div>
            <div class="equipmentMenu hover">
                <h1>Equipment</h1>
                <table style="width: 100%;" cellspacing="0" cellpadding="0">
                    @if (Model.Equipments != null)
                    {
                        foreach (var item in Model.Equipments)
                        {
                        <tr>
                            <td><div class="equipmentListItemAvailable"><br />@Html.DisplayFor(modelItem => item.Title)</div></td>
                        </tr>
                        }
                    }
                </table>
            </div>
        </div>

        <div class="mainArea">
            @RenderBody()
        </div>
        

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)

        <script>
            $("div").hover(function () {
                if($(this).hasClass("hover"))
                    $(this).css("opacity", "0.9");
            }, function () {
                $(this).css("opacity", "1");
            });

            $(".jobListItem").hover(function () {
                $(this).css("background-color", "#a8d1fe");
            }, function () {
                $(this).css("background-color", "#357AC4");
            });
            
            $(".equipmentListItemAvailable").hover(function () {
                $(this).css("background-color", "#ecef90");
            }, function () {
                $(this).css("background-color", "#c8cf1f");
            });

            $(".equipmentListItemUnavailable").hover(function () {
                $(this).css("background-color", "#f7a7a7");
            }, function () {
                $(this).css("background-color", "#fa3939");
            });

            $(".employeeListItemAvailable").hover(function () {
                $(this).css("background-color", "#b2fbb3");
            }, function () {
                $(this).css("background-color", "#4fdb52");
            });

            $(".employeeListItemUnavailable").hover(function () {
                $(this).css("background-color", "#f7a7a7");
            }, function () {
                $(this).css("background-color", "#fa3939");
            });

            $("#ADDBtn").click(function () {
                window.location.href = "/Add/";
            });

            $("#HELPBtn").click(function () {
                window.location.href = "/Add/About";
            });

            $("#SIGNOUTBtn").click(function () {
                window.location.href = "/Add/Contact";
            });

        </script>
    </body>
</html>
